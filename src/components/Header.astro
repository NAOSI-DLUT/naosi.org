---
import { Image } from "astro:assets";
import naosi from "../assets/naosi.svg";
---

<header
  class="sticky top-0 bg-white border-b border-gray-200 z-10 flex justify-between items-center px-6 py-4"
>
  <a class="inline-flex items-center gap-4" href="/">
    <Image width={100} src={naosi} alt="naosi-logo" />
    <span class="text-xl text-black font-bold hidden md:inline"
      >大连理工大学网络与开源协会</span
    >
  </a>
  <div class="navbar text-gray inline-flex gap-x-2">
    <a href="/events">Events</a>
    <a href="/blog">Blog</a>
  </div>
</header>

<style>
  .navbar a:hover,
  .navbar a.active {
    @apply text-primary;
  }

  .navbar a.active {
    @apply underline underline-2 underline-offset-6;
  }
</style>

<script>
  document.querySelectorAll<HTMLAnchorElement>(".navbar a").forEach((a) => {
    if (location.href.startsWith(a.href)) {
      a.classList.add("active");
    }
  });
</script>
