---
interface Props {
  icon: string;
  href: string;
  title: string;
  description?: string;
}
const { icon, href, title, description } = Astro.props;
---

<div class="flex flex-col items-center m-4">
  <a class={`text-12 text-primary ${icon}`} href={href} target="_blank"> </a>
  <h3 class="service-title">
    <span>{title}</span>
    <a class="icon-align i-ri-link" href={href} target="_blank"> </a>
  </h3>
  <div class="service-description">{description}</div>
</div>

<style>
  .service-logo {
    display: block;
    color: var(--primary);
    font-size: 3rem;
  }

  .service-title {
    display: inline-flex;
    align-items: center;
    column-gap: 4px;
    font-size: 1.2rem;
    font-weight: normal;
    margin: 10px 0;
  }
</style>
