---
import { Icon } from "astro-icon/components";

const { icon, url, title, description } = Astro.props;
---

<div class="service">
  <a class="service-logo" href={url} target="_blank">
    <Icon name={icon} />
  </a>
  <h3 class="service-title">
    <span>{title}</span>
    <a class="icon-align" href={url} target="_blank">
      <Icon name="ri:link" />
    </a>
  </h3>
  <div class="service-description">{description}</div>
</div>

<style>
  .service {
    margin: 12px;
  }

  .service-logo {
    display: block;
    color: var(--primary);
    font-size: 3rem;
  }

  .service-title {
    display: inline-flex;
    align-items: center;
    column-gap: 4px;
    font-size: 1.2rem;
    font-weight: normal;
    margin: 10px 0;
  }
</style>
