---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="zh">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="NAOSI" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>
      {title ? `${title} | NAOSI` : "NAOSI"}
    </title>
  </head>
  <body class="bg-gray-1">
    <Header />
    <div class="max-w-4xl mx-auto p-4 min-h-screen">
      <slot />
    </div>
    <Footer />
    <div
      class="md:hidden fixed top-0 right-0 h-full flex flex-col justify-center"
    >
      <a
        href="https://qm.qq.com/q/AxAh9JeZs4"
        target="_blank"
        class="p-2 rounded-l-xl bg-primary text-white"
        >加<br />入<br />社<br />团</a
      >
    </div>
  </body>
</html>
