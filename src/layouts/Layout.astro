---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "font-awesome/css/font-awesome.min.css";

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="zh">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="大连理工大学网络与开源软件协会" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>
      {
        title
          ? `${title} | 大连理工大学网络与开源软件协会`
          : "大连理工大学网络与开源软件协会"
      }
    </title>
  </head>
  <body>
    <div class="wrapper">
      <Header />
      <main class="content">
        <slot />
      </main>
    </div>
    <Footer />
  </body>
</html>
<style is:global>
  :root {
    --primary: #549d36;
    --primary-light: #7fcf5a;
    --primary-dark: #3f7f2f;
    --primary-hover: #66b84a;
    --primary-active: #4a8b2e;
    --primary-disabled: #a0cfa0;
    --primary-background: #e6f4e6;
    --primary-border: #4a8b2e;

    --disabled: #888;
  }

  body {
    margin: 0;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen,
      Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
    overflow-wrap: break-word;
  }

  .wrapper {
    max-width: 1000px;
    margin: 0 auto;
    padding: 20px;
  }

  .content {
    padding: 20px;
  }

  a {
    color: var(--primary);
    text-decoration: none;
  }
</style>
